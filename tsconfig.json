{
  "compilerOptions": {
    "outDir": "./dist",
    "lib": ["es2021"],
    "isolatedModules": true,
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es2021",
    "removeComments": true,
    "esModuleInterop": true,
    "preserveConstEnums": true,
    "resolveJsonModule": true
  },
  "parserOptions": {
    "project": "./tsconfig.json"
  },
  "ts-node": {
    "esm": true
  },
  "include": [
    "app",
    "app/**/*.json"
  ],
  "exclude": [
  ]
}
