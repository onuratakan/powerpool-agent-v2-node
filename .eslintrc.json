{
  "extends": ["eslint:recommended", "plugin:@typescript-eslint/recommended"],
  "root": true,
  "env": {
    "node": true,
    "mocha": true,
    "es2020": true
  },
  "globals": {
    "web3": true,
    "artifacts": true,
    "contract": true
  },
  "parser": "@typescript-eslint/parser",
  "rules": {
    "quotes": ["error", "single", "avoid-escape"],
    "@typescript-eslint/no-empty-function": "off"
  },
  "plugins": ["prettier", "@typescript-eslint"]
}
